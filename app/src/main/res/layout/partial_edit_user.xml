<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="8dp"
        android:textSize="24sp"
        android:text="@string/edit_user_welcome_create"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/card_corner_radius">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_all_margin"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/edit_text_new_username"/>
            <EditText
                android:id="@+id/new_username_field"
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_height"
                android:inputType="textPersonName"
                android:paddingHorizontal="8dp"
                android:background="@drawable/rounded_text_field_background" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/edit_text_new_password"/>
            <EditText
                android:id="@+id/new_password_field"
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_height"
                android:inputType="textPassword"
                android:paddingHorizontal="8dp"
                android:background="@drawable/rounded_text_field_background" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/edit_text_new_permissions"/>
            <Spinner
                android:id="@+id/new_permissions_spinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_height"
                android:background="@drawable/rounded_text_field_background"/>
            <Button
                android:id="@+id/create_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_height"
                android:layout_marginTop="24dp"
                android:text="@string/create_user_button"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_button_background"
                android:backgroundTint="@color/primary"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="8dp"
        android:textSize="24sp"
        android:text="@string/edit_user_welcome"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/card_corner_radius">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_all_margin"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/edit_user_select"/>
            <Spinner
                android:id="@+id/username_spinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_height"
                android:background="@drawable/rounded_text_field_background"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/edit_text_new_username"/>
            <EditText
                android:id="@+id/edit_username_field"
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_height"
                android:inputType="textPersonName"
                android:paddingHorizontal="8dp"
                android:background="@drawable/rounded_text_field_background" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/edit_text_new_password"/>
            <EditText
                android:id="@+id/edit_password_field"
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_height"
                android:inputType="textPassword"
                android:paddingHorizontal="8dp"
                android:background="@drawable/rounded_text_field_background" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/edit_text_new_permissions"/>
            <Spinner
                android:id="@+id/edit_permissions_spinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_height"
                android:background="@drawable/rounded_text_field_background"/>
            <Button
                android:id="@+id/delete_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_height"
                android:layout_marginTop="24dp"
                android:text="@string/delete_user_button"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_button_background"
                android:backgroundTint="@color/danger"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
