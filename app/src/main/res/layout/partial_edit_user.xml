<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:textSize="24sp"
        android:text="@string/edit_user_welcome_create"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/card_corner_radius">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/edit_text_new_username"/>
            <EditText
                android:id="@+id/new_username_field"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:paddingHorizontal="8dp"
                android:background="@drawable/rounded_text_field_background" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/edit_text_new_password"/>
            <EditText
                android:id="@+id/new_password_field"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:paddingHorizontal="8dp"
                android:background="@drawable/rounded_text_field_background" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/edit_text_new_permissions"/>
            <Spinner
                android:id="@+id/new_permissions_spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rounded_text_field_background"/>
            <Button
                android:id="@+id/create_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                android:text="@string/create_user_button"
                android:textColor="@color/white"
                android:background="@drawable/rounded_button_background"
                android:backgroundTint="@color/primary"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/edit_user_welcome"
        android:textSize="24sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/card_corner_radius">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/edit_user_select"/>
            <Spinner
                android:id="@+id/username_spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rounded_text_field_background"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/edit_text_new_username"/>

            <EditText
                android:id="@+id/edit_username_field"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:paddingHorizontal="8dp"
                android:background="@drawable/rounded_text_field_background" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:text="@string/edit_text_new_password"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_password_field"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:paddingHorizontal="8dp"
                android:background="@drawable/rounded_text_field_background" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/edit_text_new_permissions"/>
            <Spinner
                android:id="@+id/edit_permissions_spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rounded_text_field_background"/>
            <Button
                android:id="@+id/delete_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                android:text="@string/delete_user_button"
                android:textColor="@color/white"
                android:background="@drawable/rounded_button_background"
                android:backgroundTint="@color/danger"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="8dp"
                android:textSize="24sp"
                android:text="@string/permission_title"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/card_corner_radius">

            <TableLayout
                android:id="@+id/simpleTableLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1">

                <TableRow
                    android:id="@+id/firstRow"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18dip"
                        android:text="@string/permission_window_all"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                    <Spinner
                        android:id="@+id/minimum_permissions_spinner_window_all"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_text_field_background"/>
                </TableRow>

                <TableRow
                    android:id="@+id/secondRow"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18dip"
                        android:text="@string/permission_window_local"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                    <Spinner
                        android:id="@+id/minimum_permissions_spinner_window_local"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_text_field_background"/>
                </TableRow>

                <TableRow
                    android:id="@+id/thirdRow"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18dip"
                        android:text="@string/permission_door_all"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                    <Spinner
                        android:id="@+id/minimum_permissions_spinner_door_all"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_text_field_background"/>
                </TableRow>

                <TableRow
                    android:id="@+id/fourthRow"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18dip"
                        android:text="@string/permission_door_local"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                    <Spinner
                        android:id="@+id/minimum_permissions_spinner_door_local"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_text_field_background"/>
                </TableRow>

                <TableRow
                    android:id="@+id/fifthRow"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18dip"
                        android:text="@string/permission_light_all"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                    <Spinner
                        android:id="@+id/minimum_permissions_spinner_light_all"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_text_field_background"/>
                </TableRow>

                <TableRow
                    android:id="@+id/sixthRow"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18dip"
                        android:text="@string/permission_light_local"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                    <Spinner
                        android:id="@+id/minimum_permissions_spinner_light_local"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_text_field_background"/>
                </TableRow>

                <TableRow
                    android:id="@+id/seventhRow"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18dip"
                        android:text="@string/permission_garage"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                    <Spinner
                        android:id="@+id/minimum_permissions_spinner_garage"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_text_field_background"/>
                </TableRow>

                <TableRow
                    android:id="@+id/eightRow"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18dip"
                        android:text="@string/permission_away_mode"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                    <Spinner
                        android:id="@+id/minimum_permissions_spinner_away_mode"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_text_field_background"/>
                </TableRow>
            </TableLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>

